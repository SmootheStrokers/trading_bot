# ── Polymarket CLOB Credentials ──────────────────────────────────────────────
# Get these from https://polymarket.com → Settings → API Keys
POLY_PRIVATE_KEY=
POLY_API_KEY=
POLY_API_SECRET=
POLY_API_PASSPHRASE=
CHAIN_ID=137

# ── Paper Trading (default: ON for safety) ─────────────────────────────────────
# PAPER_TRADING=true  = No real orders; simulates with $1000 paper balance
# PAPER_TRADING=false = Real money trading (only after validating in paper mode)
PAPER_TRADING=true

# ── Capital ───────────────────────────────────────────────────────────────────
# Paper balance (when PAPER_TRADING=true) or real USDC (when false)
BANKROLL=1000.0

# ── Optional ──────────────────────────────────────────────────────────────────
CLOB_API_URL=https://clob.polymarket.com
LOG_LEVEL=INFO
LOG_FILE=bot.log

# Rate limiting (reduces 429 errors from Polymarket CLOB)
SCAN_INTERVAL_SECONDS=120        # Scan every 2 min instead of 30s
CLOB_REQUEST_DELAY=1.0           # 1 second between API requests

# DRY_RUN=true prevents any real order execution (use for testing)
DRY_RUN=true

# PRICE_FEED_SOURCE=coingecko skips Binance (use if geo-restricted, e.g. US)
# PRICE_FEED_SOURCE=binance is default; falls back to CoinGecko on 451 automatically
# PRICE_FEED_SOURCE=coingecko

SCAN_INTERVAL_SECONDS=120
CLOB_REQUEST_DELAY=1.0

PROXY_WALLET=wallet_address

